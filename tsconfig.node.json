{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "pretty": true,
    "rootDir": ".",
    "target": "ESNext"
  }
}
