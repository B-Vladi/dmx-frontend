{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "composite": true,
    "sourceMap": false,
    "isolatedModules": false,
    "esModuleInterop": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "./src/**/*"
  ]
}
